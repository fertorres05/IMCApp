<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ImcCalculatorActivity"
    android:paddingHorizontal="16dp"
    android:paddingVertical="32dp"
    android:background="@color/black">

    <TextView
        android:id="@+id/your_result"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Tu resultado"
        android:textColor="@color/white"
        android:textSize="40dp" />



    <androidx.cardview.widget.CardView
        android:id="@+id/viewIMC"
        android:layout_width="0dp"
        android:layout_height="500dp"
        app:cardBackgroundColor="@color/bg_comp"
        app:cardCornerRadius="16dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/your_result"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_margin="16dp">

            <TextView
                android:id="@+id/composicionCorporal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sobrepeso"
                android:textAllCaps="true"
                android:layout_gravity="center"
                android:textColor="@color/orange_title"
                android:textStyle="bold"
                android:textSize="25dp"
                android:layout_margin="30dp"/>
            <TextView
                android:id="@+id/resultImc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="27.46"
                android:textSize="80dp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:layout_margin="50dp"/>

            <TextView
                android:id="@+id/descripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estas por encima de recomendado."
                android:textSize="30dp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnRecalcular"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="recalcular"
        android:textSize="32sp"
        android:textStyle="bold"
        android:background="@color/bg_button"
        app:layout_constraintTop_toBottomOf="@id/viewIMC"
        android:layout_marginTop="16dp">
    </androidx.appcompat.widget.AppCompatButton>

</androidx.constraintlayout.widget.ConstraintLayout>